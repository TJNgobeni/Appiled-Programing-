        <span asp-validation-for="AffectedAreas" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ResourcesNeeded" class="control-label"></label>
        <input asp-for="ResourcesNeeded" class="form-control" />
        <span asp-validation-for="ResourcesNeeded" class="text-danger"></span>
    </div>
     <div class="form-group">
        <label asp-for="Injuries" class="control-label"></label>
        <input asp-for="Injuries" class="form-control" />
        <span asp-validation-for="Injuries" class="text-danger"></span>
    </div>
        <div class="form-group">
        <label asp-for="Fatalities" class="control-label"></label>
        <input asp-for="Fatalities" class="form-control" />
        <span asp-validation-for="Fatalities" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

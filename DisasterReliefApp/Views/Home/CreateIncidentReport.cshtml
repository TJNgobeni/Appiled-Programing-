@model DisasterReliefApp.Models.IncidentReport

@{    ViewData["Title"] = "Create Incident Report";}

<h1>Create Incident Report</h1>

<form asp-action="CreateIncidentReport">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="ReportedBy" class="control-label"></label>
        <input asp-for="ReportedBy" class="form-control" />
        <span asp-validation-for="ReportedBy" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IncidentType" class="control-label"></label>
        <input asp-for="IncidentType" class="form-control" />
        <span asp-validation-for="IncidentType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Location" class="control-label"></label>
        <input asp-for="Location" class="form-control" />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateOccurred" class="control-label"></label>
        <input asp-for="DateOccurred" type="datetime-local" class="form-control" />
        <span asp-validation-for="DateOccurred" class="text-danger"></span>
    </div>
     <div class="form-group">
        <label asp-for="Severity" class="control-label"></label>
